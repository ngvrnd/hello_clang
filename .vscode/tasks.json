{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Clang++",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-Wall",
        "-g",
        "main.cpp",
        "-o",
        "main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}